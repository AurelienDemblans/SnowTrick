{% block title %} SnowTrick : {{trick.name}}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/homepage.css') }}" type="text/css" media="all"/>
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block body %}
<div>{{trick.name}}</div>
<div>{{trick.trickGroup.name}}</div>
<div>{{trick.description}}</div>
<div>{{ trick.createdAt|date('d/m/Y') }}</div>
{% set hasBeenUpdated = trick.updatedAt ? trick.updatedAt|date('d/m/Y') : null %}
{% if hasBeenUpdated is not null %}
<div>{{ trick.updatedAt|date('d/m/Y') }}</div>
			{% else %}
